
.breadcrumbs_block
  border-bottom: 1px solid #ecedee;
  padding: 15px 0;
  margin-bottom: 20px;
  & a
    color: mainColor
  & a:hover
    text-decoration: underline

.breadcrumbs_sep
  padding-left: 5px
  padding-right: 5px

.gallery_heading
  position: relative
  margin: 60px auto 30px;
  width: 100%;
  font-weight: bold;
  color: #363636;
  text-align: center;
  text-transform: uppercase;
  &:after
    content ''
    position: absolute
    left: 50%
    margin-left: -40px
    top: calc(100%+30px)
    height: 2px;
    background-color: mainColor;
    width: 80px;

.lightgallery
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  margin: 0
  padding: 0
  list-style none

.gallery_list
  margin-top: 38px;
  background-color: #ecedee;
  padding: 40px 0 20px;
  border-bottom: 6px solid mainColor;


.gallery_item
  width 32%
  background: backgroundColor
  padding: 10px;
  margin-bottom: 20px;
  height: 100%;

@media (max-width: 600px)
  .lightgallery
    flex-flow: column wrap
    align-items: center
  .gallery_item
    width: 85%


.payment_heading,.testimonials_heading,.contacts_heading
  position: relative
  margin: 60px auto 68px;
  width: 100%;
  font-weight: bold;
  color: #363636;
  text-align: center;
  text-transform: uppercase;
  &:after
    content ''
    position: absolute
    left: 50%
    margin-left: -40px
    top: calc(100%+30px)
    height: 2px;
    background-color: mainColor;
    width: 80px;

.payment_list,.testimonials_list,.contacts_list
  background-color: #ecedee;
  padding: 40px 0 10px;
  border-bottom 6px solid mainColor

.payment_item
  display: flex
  flex-flow: row nowrap
  padding: 10px;
  margin-bottom: 30px;
  width: 100%;

.payment_icon
  display: block;
  max-width 100%
  height: auto
  max-height 140px
  margin-right: 20px;

.payment_title
  font-size: 18px;
  font-weight: bold;
  margin: 18px 0;

.payment_description
  font-size: 14px;
  font-weight: 100;
  color: #7a7a7a;
  margin-bottom: 0;
  word-spacing: 0.2em;

.payment_description_list
  padding: 0
  margin: 0

.payment_description_list li
  margin-left: 16px;
  margin-bottom: 10px;
  font-size: 14px;
  font-weight: 100;
  color: mainColor


.payment_description_list span
  color: #7a7a7a;

.testimonials_item
  background: backgroundColor
  margin-bottom: 25px;
  padding: 20px;
  border-bottom: 4px solid #e0e1e2;

.testimonials_user_name
  font-weight: bold
.testimonials_rating
  padding-top: 12px;

.testimonials_stars
  display: inline-block

.testimonials_spoiler_wrap
  display: none

.testimonials_spoiler_title span
  cursor: pointer

.testimonials_more_add_block
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  padding: 12px 0;

@media (max-width: 600px)
  .testimonials_more_add_block
    flex-flow column nowrap
    align-items center
  .testimonials_counter_block
    text-align: center
  .testimonials_counter
    display: block
    margin: 0

.testimonials_counter
  color: #7a7a7a;
  margin-right: 10px

@media (max-width: 600px)
  .testimonials_more_add_block
    flex-flow column nowrap
    align-items center
  .testimonials_counter_block
    text-align: center
    margin-bottom:10px
  .testimonials_counter
    display: block
    margin: 0

.testimonials_more_link,.testimonials_add_link
  font-size: 16px;
  color: #2579bf;
  text-decoration: none;
  border-bottom: 1px dashed #2579bf;
  cursor: pointer;
  &:hover
    text-decoration: none
    color: #205f9f;
    border-bottom: 1px dashed #205f9f;
  &:focus
    outline none
    text-decoration: none

.testimonials_add_block
  position: relative
  padding: 35px 35px 15px;
  width: auto;
  height: auto;
  background-color: backgroundColor
  border-radius 4px

.testimonials_add_modal_close
  position: absolute
  right 15px
  top: 15px
  font-size: 24px
  cursor: pointer

.testimonials_add_fields
  padding-bottom: 20px
  padding-top: 30px

.testimonials_add_heading
  font-weight: bold

.testimonials_add_label
  font-weight: normal

.testimonials_add_input
  display: block;
  width: 100%;
  height: 34px;
  font-size: 14px;
  line-height: 1.42857143;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
  color: #7a7a7a;
  padding: 3px 10px;
  margin-bottom: 15px
  outline none
  &:focus
    border-color: mainColor;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6);


.testimonials_add_textarea
  min-height 80px
  width: 100%
  font-size: 14px;
  line-height: 1.42857143;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
  color: #7a7a7a;
  padding: 10px 10px;
  margin-bottom: 15px
  outline none
  resize none
  &:focus
    border-color: mainColor;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6);

.testimonials_add_privacy
  margin-bottom: 20px;
  margin-top: 20px;

.testimonials_add_privacy_link
  text-decoration: underline
  color: textColor
  &:hover
    text-decoration: none
    color: textColor

.testimonials_add_submit
  display: block
  margin: 0 auto
  border: 1px solid;
  border-color: #ccc #ccc #bbb;
  color: rgba(0, 0, 0, .8);
  font-size: 14px ;
  font-weight: bold ;
  line-height: 1;
  padding: .6em 1em .4em;
  &:focus
    outline none


.contacts_list
  display: flex
  flex-flow column nowrap
  align-items center
  padding-bottom: 0

.contacts_info
  background: backgroundColor
  border-bottom: 4px solid #e0e1e2;
  padding: 20px;
  min-height: 194px;
  margin-bottom: 30px;
  margin-left: 10px
  margin-right: 10px


.contacts_map
  width: 100%
  max-height: 403px