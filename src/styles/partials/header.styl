.msg_ok,.req_ok
  display: none


.header_top
  padding-top: 25px
  margin-bottom: 25px;
.logo
  display: block
  width: 100%
  height: 60px
  background-image: url("..//img/logo.png")
  background-repeat: no-repeat
  -webkit-background-size: 100%
  background-size: 100%

.top_btn_block
  display: flex
  flex-flow: row wrap
  justify-content: flex-end
  align-items flex-end
  height 60px

.top_btn
  position: relative
  margin-right: 20px
  margin-bottom: 5px
  margin-top: 5px
  width 254px
  border 2px solid mainColor
  padding 10px 0 10px 15px
  text-transform: uppercase;
  font-weight: bold;
  font-style: normal;
  font-size: 14px;
  color: mainColor
  transition all 0.3s
  &:hover
    background-color: mainColor
    color: backgroundColor;
    text-decoration: none


.top_btn-calc svg
.top_btn-call svg
  position: absolute
  right: 10px
  top: 7px

  fill mainColor
  transition all 0.3s

.top_btn-calc svg
  width: 20px

.top_btn-call svg
  width: 30px


.top_btn-calc:hover svg
.top_btn-call:hover svg
  fill backgroundColor

.top_contact_block
  text-align: right


.top_phone_icon
  color: mainColor

.top_req_call
  color: linkColor
  padding: 10px 0 10px 8px
  text-decoration: underline
  &:hover
    color: mainColor


.top_phone
  font-weight: bold;
  font-style: normal;
  font-size: 24px;
  padding: 0;
  margin: 0;

.top_main_menu_block
  min-height: 60px;
  background-color: mainColor

.top_main_menu_list
  display: flex
  flex-flow: row nowrap
  justify-content: center
  list-style none
  margin: 0
  padding: 0


.top_main_menu-sub_menu
  display: none

.top_main_menu-item
  position: relative
  min-height 60px
  display: flex
  flex-flow: column nowrap
  justify-content:center
  cursor: pointer

.top_main_menu-item:hover
  background-color: hoverColor




.top_main_menu-link
  font-size: 13px
  outline: none;
  text-decoration: none;
  border-right: 1px solid backgroundColor;
  padding: 0px 15px 0px 15px
  line-height: 40px;
  font-weight: bold;
  height: 40px;
  vertical-align: baseline;
  text-align: center;
  width: auto;
  display: block;
  color: backgroundColor;
  text-transform: uppercase;
  transition all 0.3s

.top_main_menu-item:hover .top_main_menu-link
  color: backgroundColor;
  text-decoration: none
.top_main_menu-item:last-child .top_main_menu-link
  border none

.top_main_menu-sub_menu
  margin: 0
  list-style none
  transition-duration: 200ms;
  transition-timing-function: ease-in;
  transition-property: margin-top;
  z-index: 1500;
  position: absolute;
  top 100%
  background: backgroundColor;
  width: 360px ;
  padding: 15px 10px;
  border-bottom: 4px solid mainColor;

.top_main_menu-sub_link
  display: block
  color: textColor
  font-size: 12px
  text-transform: uppercase
  font-weight: 100
  line-height: 20px
  margin-top: 10px
  padding: 0px 15px 0px 15px

.top_main_menu-item:hover > .top_main_menu-sub_menu
  display: block