@media (max-width: 768px )
  .main_page_about
    display: none


.left_block_about
.right_block_about
  padding: 47px 15px;

.left_block_about h2
  font-weight: bold;
  font-style: normal;
  font-size: 34px;
  color: mainColor;
  text-transform: uppercase;
  margin: 0 0 30px 0;


.left_block_about h3
.right_block_about h3
  font-weight: bold;
  font-style: normal;
  font-size: 24px;
  color: #363636;
  text-transform: uppercase;
  margin: 0;
  padding: 0;


.right_block_about h3
  margin-bottom: 20px;

.right_block_about p
  font-weight: 100;
  font-style: normal;
  font-size: 16px;
  color: #7a7a7a;
  margin-bottom: 15px;

.main_page_advantage
  min-height: 253px;
  background: mainColor

.main_page_advantage_list
  display: flex
  flex-flow: row wrap
  justify-content: space-between

.main_page_advantage_item
  display: block;
  width: 20%;
  text-align: center;
  font-weight: bold;
  font-style: normal;
  font-size: 16px;
  color: backgroundColor
  padding: 40px 10px 25px;

@media (max-width: 992px)
  .main_page_advantage_item
    font-size: 13px;

.main_page_advantage_img
  width: 110px;
  height: 100px;
  background-color: backgroundColor
  padding: 15px;
  border-radius: 50%;
  margin: 0 auto;

.main_page_advantage_item p
  margin-top: 20px

.slider
  max-width: 800px;
  margin: 0px auto;
  padding: 40px 0px




.slick-prev:before
.slick-next:before
  color: mainColor
  font-size: 30px
  visibility hidden
  transition all 0.3s

.slider:hover .slick-prev:before, .slider:hover .slick-next:before
  visibility visible

.brands_company_img
  display: block
  max-width 100%
  margin: 0 auto
  &:focus
    outline none