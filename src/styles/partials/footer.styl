


.footer_menu_block
  display: flex
  flex-flow row nowrap
  justify-content: space-between
  padding: 50px 0;

@media (max-width: 767px)
  .footer_menu_block
    justify-content: center
    align-items center

.footer_menu_list
  width: 20%

@media (max-width: 767px)
  .footer_menu_list
    display: none

.footer_menu_list ul
  list-style none
  margin: 0
  padding: 0

.footer_menu_list h4
  padding: 0
  text-transform: uppercase;
  font-weight: bold;
  margin: 0 0 18px;
  line-height: 1.1;
  color: #363636;


.footer_menu_list li
  margin: 10px 0;

.footer_menu_list a
  font-size: 14px;
  color: #7a7a7a;
  text-decoration: underline;

.footer_menu_list a:hover
  color: mainColor;
  text-decoration: none;

@media (max-width:992px)
  .footer_menu_list h4
    font-size: 14px;
    margin: 7px 0;

  .footer_menu_list li
    margin: 6px 0;
  .footer_menu_list a
    font-size: 9px

.footer_contact_block
  width: 20%

.footer_contact_phone
  display: block
  color: #363636;
  font-weight: bold;
  font-size: 20px;
  line-height: 1.1;
  padding: 0;
  margin: 0 0 10px;
  margin-bottom: 0;
  text-align: right



@media (max-width: 992px)
  .footer_contact_phone
    font-size: 14px
    margin-top: 7px

.footer_contact_schedule
  display: block
  color: #7a7a7a;
  text-align: right

.footer_contact_req_call
  text-align: right
  & a
    color: #7a7a7a;
    text-decoration: underline
    margin-left: 5px
  & a:hover
    text-decoration: none
    color: mainColor
  & .fa
    color: mainColor;
    font-size: 14px;

.footer_contact_send_mail
  text-align: right
  & a
    color: #7a7a7a;
    text-decoration: underline
    margin-left: 5px
  & a:hover
    text-decoration: none
    color: mainColor
  & .fa
    color: mainColor;
    font-size: 14px;

@media (max-width: 767px)
  .footer_contact_block
    width auto
    max-width 280px
  .footer_contact_phone
    font-size: 24px
    text-align: center
  .footer_contact_schedule
  .footer_contact_req_call
  .footer_contact_send_mail
    text-align: center

.footer_bottom_block
  background-color: #ecedee;
  min-height: 50px;
  padding-bottom: 4px;
  padding-top: 10px;
  text-align: center


.call_modal
  position: relative
  max-width 570px
  min-width 300px
  min-height: 310px;
  padding: 20px;
  background-color: mainColor
  border-radius 0
  margin: 0 auto

.call_modal_heading
  text-align: left;
  text-transform: uppercase;
  color: backgroundColor
  font-size: 24px;
  font-weight: bold;
  margin: 0 0 25px;
  padding: 0;

.call_modal_close
  position: absolute;
  top: 16px;
  right: 20px;
  cursor: pointer;
  display: block;
  font-size: 24px;
  color: backgroundColor;


.call_modal_label
  font-weight: 100;
  color: backgroundColor;

.call_modal_input
  color: #7a7a7a;
  padding: 3px 20px;
  margin-bottom 20px
  width: 100%;
  height: 40px;
  font-size: 16px;
  font-family: mainFont
  border: none;
  outline none

.call_modal_footer
  display: flex
  flex-flow: row wrap
  justify-content: space-between

@media (max-width: 600px)
  .call_modal_footer
    flex-flow: column wrap
    align-items:center

.call_modal_privacy
  color: backgroundColor
  margin-bottom: 20px
  & a
    color: backgroundColor
    text-decoration: underline;
  & a:hover
    text-decoration: none

@media (max-width: 600px)
  .call_modal_privacy
    text-align: center

.call_modal_submit
  width: 137px
  height: 44px
  min-width: 115px
  border: 3px solid backgroundColor
  border-radius: 0
  color: backgroundColor
  font-size: 14px
  font-weight: bold
  font-family: mainFont
  text-transform: uppercase
  background: mainColor
  transition all 0.3s
  &:hover
    background-color: backgroundColor
    color: mainColor
